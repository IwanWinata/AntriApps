<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>AntriApps</title>
</head>
<body>
    <h1>AntriApps</h1>

    <form action="AntrianServlet" method="post">
        <input type="submit" value="Ambil Nomor Antrian">
    </form>

 
    <script>
        function ambilNomor() {
            fetch('/AntriApps/AntrianServlet', {
                method: 'POST',
                body: new URLSearchParams({
                    'action': 'ambil'
                }),
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                }
            })
            .then(response => response.json())
            .then(data => {
                console.log('Data yang Diterima:', data);
                if (data && data.nomorAntrian !== undefined) {
                    // Tampilkan pop-up SweetAlert dengan nomor antrian yang diambil
                    Swal.fire({
                        title: 'Nomor Antrian Anda',
                        html: `<div style="font-size: 3em; text-align: center;">${data.nomorAntrian}</div>`,
                        showConfirmButton: true,
                        backdrop: true,
                        allowOutsideClick: false,
                        customClass: {
                            popup: 'large-popup'
                        }
                    });
                } else {
                    console.error('Nomor antrian tidak valid.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>
</body>
</html>
